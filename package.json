{
  "name": "merge-conflict-game-extension",
  "displayName": "Merge Conflict Game",
  "description": "Gamifies merge conflict resolution in VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:plaintext",
    "onLanguage:git-commit",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mergeConflictGame.start",
        "title": "Start Merge Conflict Game"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "postcompile": "copy src\\buggyProblems.json out\\buggyProblems.json",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.60.0",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3"
  }
}
